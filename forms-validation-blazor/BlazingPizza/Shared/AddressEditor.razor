<div class="form-field">
    <label for="customername">Name:</label>
    <div>
        <input type="text" id="customername" @bind="Address.Name">
    </div>
</div>

<div class="form-field">
    <label for="addressline1">Line 1:</label>
    <div>
        <input type="text" id="addressline1" @bind="Address.Line1">
    </div>
</div>

<div class="form-field">
    <label for="addressline2">Line 2:</label>
    <div>
        <input type="text" id="addressline2" @bind="Address.Line2">
    </div>
</div>

<div class="form-field">
    <label for="city">City:</label>
    <div>
        <input type="text" id="city" @bind="Address.City">
    </div>
</div>

<div class="form-field">
    <label for="region">Region:</label>
    <div>
        <input type="text" id="region" @bind="Address.Region">
    </div>
</div>

<div class="form-field">
    <label for="postalcode">Postal Code:</label>
    <div>
        <input type="text" id="postalcode" @bind="Address.PostalCode">
    </div>
</div>

@code {
    [Parameter] public Address Address { get; set; }
}